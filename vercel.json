{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "client/build"
        }
      },
      {
        "src": "server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "./server/api/(.*)", "dest": "server.js" },
      { "src": "./client/(.*)", "dest": "client/build/$1" }
    ]
  }